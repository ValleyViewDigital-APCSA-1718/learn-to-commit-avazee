// Fahrenheit to Celsius Converter
//------------

public class TempConverter
{
    //---------------
    // Computes the Fahrenheit equivilent of a specific Celsius 
    // value using the formula C = F - 32 * (5/9)
    public static void main (String[] args)
    {
        final int BASE = 32;
        final double CONVERSION_FACTOR = 5.0 / 9.0;
        
        int fTemp = 24;
        double cTemp;
        
        cTemp = fTemp - BASE * (CONVERSION_FACTOR);
        
        System.out.println ("Celsius Temperature: " + cTemp);
        System.out.println ("Fahrenheit Equivilent: " + fTemp);
    } // End method main
} // End class TempConverter
